@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="assets/images/favicon.ico" rel="icon">
    <title>Agile快速开发框架</title>
    <link rel="stylesheet" href="~/resources/assets/libs/layui/css/layui.css" />
    <link rel="stylesheet" href="~/resources/assets/module/admin.css?v=318" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <!-- 头部 -->
        <div class="layui-header">
            <div class="layui-logo">
                <img src="~/resources/assets/images/logo.png" />
                <cite>&nbsp;Agile快速开发框架</cite>
            </div>
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item" lay-unselect>
                    <a ew-event="flexible" title="侧边伸缩"><i class="layui-icon layui-icon-shrink-right"></i></a>
                </li>
                <li class="layui-nav-item" lay-unselect>
                    <a ew-event="refresh" title="刷新"><i class="layui-icon layui-icon-refresh-3"></i></a>
                </li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item" lay-unselect>
                    <a ew-event="message" title="消息">
                        <i class="layui-icon layui-icon-notice"></i>
                        <span class="layui-badge-dot"></span>
                    </a>
                </li>
                <li class="layui-nav-item layui-hide-xs" lay-unselect>
                    <a ew-event="fullScreen" title="全屏"><i class="layui-icon layui-icon-screen-full"></i></a>
                </li>
                <li class="layui-nav-item" lay-unselect>
                    <a>
                        <img src="~/resources/assets/images/head.jpg" class="layui-nav-img">
                        <cite>管理员</cite>
                    </a>
                    <dl class="layui-nav-child">
                        <dd lay-unselect><a ew-href="~/resources/page/template/user-info.html">个人中心</a></dd>
                        <dd lay-unselect><a ew-event="psw">修改密码</a></dd>
                        <dd lay-unselect><a ew-event="logout" data-url="/admin/account/login">退出</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item" lay-unselect>
                    <a ew-event="theme" title="主题"><i class="layui-icon layui-icon-more-vertical"></i></a>
                </li>
            </ul>
        </div>

        <!-- 侧边栏 -->
        <div class="layui-side">
            <div class="layui-side-scroll">
                <ul class="layui-nav layui-nav-tree arrow2" lay-filter="admin-side-nav" lay-shrink="_all">
                    <li class="layui-nav-item">
                        <a><i class="layui-icon layui-icon-home"></i>&emsp;<cite>系统管理</cite></a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a lay-href="/admin/menu/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>菜单管理</cite>
                                </a>
                            </dd>
                            <dd>
                                <a lay-href="/admin/user/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>用户管理</cite>
                                </a>
                            </dd>
                            <dd>
                                <a lay-href="/admin/role/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>角色管理</cite>
                                </a>
                            </dd>
                            <dd>
                                <a lay-href="/admin/permission/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>权限管理</cite>
                                </a>
                            </dd>
                            <dd>
                                <a lay-href="/admin/log/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>日志管理</cite>
                                </a>
                            </dd>
                            <dd>
                                <a lay-href="/admin/dictionary/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>数据字典</cite>
                                </a>
                            </dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a><i class="layui-icon layui-icon-home"></i>&emsp;<cite>插件管理</cite></a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a lay-href="/admin/plugin/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>插件列表</cite>
                                </a>
                            </dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a><i class="layui-icon layui-icon-home"></i>&emsp;<cite>任务调度</cite></a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a lay-href="/admin/taskSchedule/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>任务列表</cite>
                                </a>
                            </dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a><i class="layui-icon layui-icon-home"></i>&emsp;<cite>消息队列</cite></a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a lay-href="/admin/messageQueue/list">
                                    <i class="layui-icon layui-icon-home"></i>&emsp;<cite>消息列表</cite>
                                </a>
                            </dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 主体部分 -->
        <div class="layui-body">@RenderBody()</div>
        <!-- 底部 -->
        <div class="layui-footer layui-text">
            copyright © 2020 <a href="http://www.lsoey.com" target="_blank">agile</a> all rights reserved.
            <span class="pull-right">Version 1.0.0</span>
        </div>
    </div>

    <!-- 加载动画 -->
    <div class="page-loading">
        <div class="ball-loader">
            <span></span><span></span><span></span><span></span>
        </div>
    </div>

    <!-- js部分 -->
    <script type="text/javascript" src="~/resources/assets/libs/layui/layui.js"></script>
    <script type="text/javascript" src="~/resources/assets/js/common.js?v=318"></script>
    <script>
        layui.use(['index', 'admin'], function () {
            var $ = layui.jquery;
            var index = layui.index;
            var admin = layui.admin;

            // 默认加载主页
            index.loadHome({
                menuPath: '/resources/page/console/console.html',
                menuName: '<i class="layui-icon layui-icon-home"></i>'
            });

            admin.events.restartApplication = function () {
                $.get('/admin/common/restartApplication', '', function (res) {  // 实际项目这里url可以是mData?'user/update':'user/add'
                    console.log(res);
                });
            }
            admin.events.applyChanges = function () {
                $.get('/admin/plugin/ApplyChanges', '', function (res) {  // 实际项目这里url可以是mData?'user/update':'user/add'
                    console.log(res);
                });
            }
        });
    </script>
</body>
</html>